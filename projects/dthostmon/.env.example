# dthostmon Environment Variables Example
# Last Updated: 11/14/2025 12:00:00 PM CDT
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=10.1.1.74
DB_PORT=5432
DB_NAME=dthostmon
DB_USER=dthostmon
DB_PASSWORD=your_db_password_here

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=25
SMTP_AUTH_USER=
SMTP_AUTH_PASSWORD=
SMTP_FROM=dthostmon@example.com
SMTP_REPLY_TO=admin@example.com

# Pushover Configuration (Optional - mobile push notifications)
# Get API token from https://pushover.net/apps/build
# Get user key from https://pushover.net/
PUSHOVER_ENABLED=false
PUSHOVER_API_TOKEN=
PUSHOVER_USER_KEY=

# AI Configuration (OpenCode Server)

# AI Model Configuration - Grok (Primary)
GROK_API_KEY=your_grok_api_key_here
GROK_API_URL=https://api.x.ai/v1

# AI Model Configuration - Ollama (Secondary/Local)
OLLAMA_HOST=http://10.1.1.75:11434
OLLAMA_MODEL=llama3.1

# SSH Configuration
SSH_KEY_PATH=/opt/dthostmon/.ssh/id_ed25519
SSH_TIMEOUT=10

# API Configuration
API_PORT=8080
API_KEY=your_api_key_here

# Monitoring Configuration
MONITOR_INTERVAL=3600
MAX_CONCURRENT_HOSTS=5
